<odoo>
    <data>
        <record id="view_hr_employee_document_payslip_form" model="ir.ui.view">
            <field name="name">view.hr.employee.document.payslip.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bank_account_id']" position="after">
                    <field name="mostrar_campos_modulo" invisible="1"/>
                    <field 
                        name="banco_bancolombia_code" 
                        invisible="mostrar_campos_modulo == False" 
                        required="mostrar_campos_modulo == True"
                    />

                    <field name="tipo_cuenta" 
                        invisible="mostrar_campos_modulo == False"
                        required="mostrar_campos_modulo == True"
                    />
                </xpath>

            </field>
        </record>
    </data>
</odoo>