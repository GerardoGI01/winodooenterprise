<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="vacation_report_wizard_form" model="ir.ui.view">
    <field name="name">vacation.report.wizard.form</field>
    <field name="model">vacation.report</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="is_vacation" widget="boolean_toggle"/>
                    <field name="is_disabilities" widget="boolean_toggle"/>
                </group>
                <group>
                    <field name="is_consolidated_report"  invisible="1"/>
                </group>
                <group>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="id_company" invisible="1"/>
                    <field name="date_days_worked"/>
                </group>
            </group>
            <footer>
                <button name="generate_excel_report_vacation" string="GENERAR" type="object" class="oe_highlight" />
                <button special='cancel' string='CANCELAR' class="oe_highlight oe_link"/>
            </footer>
        </form>
        </field>
    </record>


    <record id="action_menu_vacation_wizard" model="ir.actions.act_window">
        <field name="name">Generar informe de Vacaciones</field>
        <field name="res_model">vacation.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vacation_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_action_menu_wizard"
            name="Informe Vac-Incp"
            parent="hr_holidays.menu_hr_holidays_report"
            action="action_menu_vacation_wizard"
            />

</odoo>