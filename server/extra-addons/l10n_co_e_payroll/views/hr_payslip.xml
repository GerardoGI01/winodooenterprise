<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.view.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='action_payslip_done']" position="before">
                <field name="dian_send"/>
                <button string="Print" name="action_payslip_dian" type="object" attrs="{'invisible': [('dian_send', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>