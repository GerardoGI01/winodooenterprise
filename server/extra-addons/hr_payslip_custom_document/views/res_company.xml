<odoo>
    <record id="res_company_payslip_document_form" model="ir.ui.view">
        <field name="name">res.company.payslip.document.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='logo']" position="after">
                    <field name="mostrar_campos_modulo"/>     
            </xpath>
        </field>
    </record>
</odoo>
